{% extends 'base.html.twig' %}

{#% import '@SyliusUi/Macro/messages.html.twig' as messages %#}
{% import '@SyliusResource/Macros/buttons.html.twig' as buttons %}

{% block body %}
    <style>
        #root {
            display: flex;
            justify-content: space-between;
        }
    </style>
    <div id='root'></div>
    
    {% if resources|length > 0 %}

        {% for resource in resources %}
            {{resource.id}} /
            {{resource.name}} /
            <a href="{{ path(configuration.getRouteName('update'), configuration.vars.route.parameters|default({ 'id': resource.id })) }}">Edit</a> /
            <a href="{{ path(configuration.getRouteName('delete'), configuration.vars.route.parameters|default({ 'id': resource.id })) }}">Delete</a>
            {{ buttons.delete(
                path(configuration.getRouteName('delete'), configuration.vars.route.parameters|default({ 'id': resource.id }))
            )}}
            <br>
            
        {% endfor %}

    {% else %}
        <div class="ui stackable grid segment">
            <div class="ui sixteen wide column">
                {{ messages.info('sylius.ui.no_results_to_display') }}
            </div>
        </div>
    {% endif %}

{#% import '@SyliusUi/Macro/messages.html.twig' as messages %#}
{#% import '@SyliusUi/Macro/pagination.html.twig' as pagination %#}

<div class="ui clearing hidden divider"></div>


{% endblock %}

{% block stylesheets %}

    {{ encore_entry_link_tags('clip') }}

{% endblock %}