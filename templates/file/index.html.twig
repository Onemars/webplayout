{% extends 'base.html.twig' %}

{% block body %}

<h1>File list</h1> <a href="{{ path('file_new') }}">upload</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>File</th>
            <th>Duration</th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('file_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.file }}</td>
            <td>{{ entity.duration }}</td>
            <td>{{ entity.id }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('file_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{#{ path('file_edit', { 'id': entity.id }) }#}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
