{% extends 'base.html.twig' %}

{% block body %}

<div class="row" style="margin-bottom: 10px">
    <video id="live" width=640 height=360 class="video-js vjs-default-skin" controls muted>
      <source
         src="http://localhost:8583/hls/live.m3u8"
         type="application/x-mpegURL">
    </video>
</div>

{#{ public_ip }#}
<div class="row" style="margin-bottom: 10px">
    <div class="btn-group">
        <button class="btn btn-primary" id="go_to_current">Scroll to current</button>
    </div>
</div>

<div class="row" style="margin-bottom: 10px">
    <div id="program_wrapper" style="display: block; overflow: auto; height:300px">
        <table id="program" class="table table-striped table-bordered">
        </table>
    </div>
</div>

<style type="text/css">
	#program tr.onAir {
	   color: red;
	}
</style>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        (function(window, videojs) {
          var player = window.player = videojs('live');

          player.ready(function() {
               player.play();
          });
        }(window, window.videojs));
    </script>
{% endblock %}
